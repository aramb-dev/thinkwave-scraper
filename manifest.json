{
    "manifest_version": 3,
    "name": "ThinkWave Assignment Tracker",
    "version": "1.0",
    "description": "Scrape and track ThinkWave assignments with due dates.",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://*.thinkwave.com/*"],
        "js": ["content.js"]
      }
    ]
  }